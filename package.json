{
  "name": "cursor-rules-registry",
  "displayName": "Cursor Rules Registry",
  "description": "Discover and manage Cursor rules across teams and users at Samsara",
  "version": "0.0.1",
  "publisher": "adamnapieralski",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adamnapieralski/cursor-rules-registry.git"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-rules-registry.open",
        "title": "Open",
        "category": "Cursor Rules Registry"
      }
    ],
    "configuration": {
      "title": "Cursor Rules Registry",
      "properties": {
        "cursorRulesRegistry.registryDirectory": {
          "type": "string",
          "default": ".cursor-rules-registry",
          "description": "Directory name for the rules registry within the workspace."
        },
        "cursorRulesRegistry.registryIsGit": {
          "type": "boolean",
          "default": true,
          "description": "If true, the registry directory is a git repository and the extension will attempt to pull it on startup."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:mocha": "npm run compile-tests && mocha -r out/test/setup.js out/test/**/*.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "mock-require": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.0"
  }
}
